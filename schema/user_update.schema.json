	"description":"input for an update or signup for a user",
	"type":"object",
	"properties":{
		"prefs":{
			"type":"object",
			"properties":{
				"fade":{
					"type":"boolean",
					"description":"animate fade between pages"
				}
			}
		},
		"name":{
			"type":"string",
			"description":"full name of user"
		},
